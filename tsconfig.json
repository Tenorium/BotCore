{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "lib": ["es2022"],
    "allowJs": false,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": false,
    "moduleResolution": "Node",
    "declaration": true,
    "newLine": "crlf"
  },
  "include": [
    "src/**/*"
  ]
}
