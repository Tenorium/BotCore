{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "standard-with-typescript",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
    "import/extensions": ["error", "always", {
      "js": "always",
      "ts": "never"
    }]
  },
  "globals": {
    "app": "readonly"
  }
}
